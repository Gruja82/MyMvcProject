@model CategoryViewModel

<h1 class="text-center">Delete category "@Model.Name"?</h1>

<div class="row">
    <div class="form-group">
        <img src="@Url.Content("/images/Categories/" + @Model.ImagePath)" width="300" height="300" id="imgControl" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" readonly class="form-control"></textarea>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="submit" class="btn btn-danger rounded" value="Delete" onclick="return confirm('Are you sure you want to delete this category?')" />
    <a asp-action="Index" class="btn btn-primary rounded">Back to Index</a>
</form>

