@model CustomerViewModel

<h1 class="text-center">Create new customer</h1>

<div class="row">
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <img width="300" height="200" asp-append-version="true" id="imgControl" />
        </div>
        <div class="form-group">
            <input type="file" asp-for="@Model.Logo" class="form-control" id="inputControl" onchange="setSrc()" />
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <label>Code</label>
            <input type="text" asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <label>Company Name</label>
            <input type="text" asp-for="Company" class="form-control" />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <label>Contact</label>
            <input type="text" asp-for="Contact" class="form-control" />
            <span asp-validation-for="Contact" class="text-danger"></span>
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <label>Address</label>
            <input type="text" asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <label>City</label>
            <input type="text" asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <label>Postal Code</label>
            <input type="text" asp-for="Postal" class="form-control" />
            <span asp-validation-for="Postal" class="text-danger"></span>
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <label>Phone</label>
            <input type="text" asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <label>Email</label>
            <input type="text" asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <hr class="btn-info mt-3" />
        <div class="form-group">
            <input type="submit" value="Save Changes" class="btn btn-primary rounded" />
        </div>
        <div class="mt-3">
            <a asp-action="Index" class="btn btn-primary rounded">Back to Index</a>
        </div>
    </form>
</div>
