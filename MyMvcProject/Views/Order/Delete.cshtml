@model OrderViewModel

<h1 class="text-center">Delete order "@Model.Code"?</h1>

<div style="100%">
    <div style="width:50%;float:left">
        <h4 class="text-center">General Info</h4>
        <hr class="btn-info mt-3" />
        <div class="row">
            <div class="form-group">
                <label>Code</label>
                <input asp-for="Code" readonly class="form-control" />
            </div>
            <hr class="btn-info mt-3" />
            <div class="form-group">
                <label>Order Date</label>
                <input type="date" asp-for="OrderDate" readonly class="form-control" />
            </div>
            <hr class="btn-info mt-3" />
            <div class="form-group">
                <label>Required Date</label>
                <input type="date" asp-for="RequiredDate" readonly class="form-control" />
            </div>
            <hr class="btn-info mt-3" />
            <div class="form-group">
                <label>Customer</label>
                <input asp-for="Customer" readonly class="form-control" />
            </div>
            <hr class="btn-info mt-3" />
            <div class="form-group">
                    Completed? <input type="checkbox" readonly asp-for="Completed" class="form-check-inline" />
                </div>
            <hr class="btn-info mt-3" />
        </div>
    </div>
    <div style="width:50%;float:right">
        <h4 class="text-center">Product List</h4>
        <hr class="btn-info mt-3" />
        <div style="overflow-y:scroll;height:400px;" class="ml-3">
            <div class="row">
                @for (int i = 0; i < Model.OrderDetailList.Count; i++)
                {
                    <div class="form-group">
                        <input asp-for="OrderDetailList[i].Product" readonly class="form-control"/>
                        <input asp-for="OrderDetailList[i].Quantity" readonly class="form-control"/>
                    </div>
                }
            </div> 
        </div>
    </div>

    <div class="form-group">
        <label>Total Ammount</label>
        <input id="inputTotal" readonly value=@ViewData["Total"] class="form-control"/>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="submit" class="btn btn-danger rounded" value="Delete" onclick="return confirm('Are you sure you want to delete this order?')" />
    <a asp-action="Index" class="btn btn-primary rounded">Back to Index</a>
</form>

<script src="~/js/order.js" asp-append-version="true"></script>