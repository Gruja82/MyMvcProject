@model SupplierViewModel

<h1 class="text-center">Details for "@Model.Company"</h1>

<div class="text-lg-end">
    <a asp-action="Create" class="btn btn-primary rounded">Create New</a>
</div>

<div class="row">
    <div class="form-group">
        <img src="@Url.Content("/images/Suppliers/" + @Model.LogoPath)" width="300" height="300" id="imgControl" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Code</label>
        <input asp-for="Code" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Company Name</label>
        <input asp-for="Company" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Contact Name</label>
        <input asp-for="Contact" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Address</label>
        <input asp-for="Address" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>City</label>
        <input asp-for="City" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Postal Code</label>
        <input asp-for="Postal" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Phone</label>
        <input asp-for="Phone" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" readonly class="form-control" />
    </div>
    <hr class="btn-info mt-3" />
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary rounded">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger rounded">Delete</a>
</div>
<div class="mt-3">
    <a asp-action="Index" class="btn btn-primary rounded">Back to Index</a>
</div>

